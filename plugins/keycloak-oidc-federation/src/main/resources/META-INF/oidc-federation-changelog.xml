<?xml version="1.0" encoding="UTF-8" standalone="no"?>

<databaseChangeLog
	xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.2.xsd">

	<changeSet author="cgeorgilakis@grnwet.gr" id="1.0">
		<createTable tableName="AUTHORITY_HINT">
			<column name="ID" type="VARCHAR(36)">
				<constraints nullable="false" />
			</column>
			<column name="REALM_ID" type="VARCHAR(36)">
				<constraints nullable="false" />
			</column>
			<column name="VALUE" type="VARCHAR(255)">
				<constraints nullable="false" />
			</column>
		</createTable>
		
		<addPrimaryKey
            constraintName="PK_AUTHORITY_HINT"
            tableName="AUTHORITY_HINT"
            columnNames="ID"
        />
        <addUniqueConstraint columnNames="REALM_ID,VALUE" constraintName="AUTHORITY_HINT_UNIQUE" tableName="AUTHORITY_HINT"/>
        <createTable tableName="TRUST_ANCHOR">
			<column name="ID" type="VARCHAR(36)">
				<constraints nullable="false" />
			</column>
			<column name="REALM_ID" type="VARCHAR(36)">
				<constraints nullable="false" />
			</column>
			<column name="VALUE" type="VARCHAR(255)">
				<constraints nullable="false" />
			</column>
		</createTable>
		
		<addPrimaryKey
            constraintName="PK_TRUST_ANCHOR"
            tableName="TRUST_ANCHOR"
            columnNames="ID"
        />
        <addUniqueConstraint columnNames="REALM_ID,VALUE" constraintName="TRUST_ANCHOR_UNIQUE" tableName="TRUST_ANCHOR"/>
	</changeSet>
</databaseChangeLog>